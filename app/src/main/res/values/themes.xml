<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PharmaTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="android:colorAccent">@color/md_theme_light_primary</item>
        <!-- default corner radius etc. -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Small</item>
    </style>

    <!-- dark theme -->
    <style name="Theme.PharmaTrack.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="android:colorAccent">@color/md_theme_dark_primary</item>
    </style>

    <style name="Shape.Small" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.PharmaTrack.WithBar" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="android:colorAccent">@color/md_theme_light_primary</item>
        <item name="shapeAppearanceSmallComponent">@style/Shape.Small</item>
    </style>

    <style name="Theme.PharmaTrack.Dark.WithBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="android:colorAccent">@color/md_theme_dark_primary</item>
    </style>

</resources>